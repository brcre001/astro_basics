---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import "../styles/global.css";
---

<Layout title="Brandon's Dev Blog">
	<main>
		<section class="hero">
			<div class="hero-content">
				<h1>Welcome to My <span class="text-gradient">Dev Journey</span></h1>
				<p class="subtitle">Exploring Web Development, Modern Technologies, and Best Practices</p>
				<div class="cta-buttons">
					<a href="/blog" class="cta-button primary">Read Blog</a>
					<a href="/about" class="cta-button secondary">About Me</a>
				</div>
			</div>
			<div class="hero-background">
				<div class="gradient-overlay"></div>
			</div>
		</section>

		<section class="featured-posts">
			<h2>Latest Articles</h2>
			<div class="card-grid">
				<Card
					href="/blog/web-development"
					title="Modern Web Development"
					body="Exploring the latest trends and technologies in web development."
				/>
				<Card
					href="/blog/javascript"
					title="JavaScript Tips"
					body="Advanced JavaScript concepts and best practices for better code."
				/>
				<Card
					href="/blog/react"
					title="React Patterns"
					body="Common patterns and solutions for React applications."
				/>
			</div>
		</section>
	</main>
</Layout>

<style lang="scss">
	main {
		width: 100%;
	}

	.hero {
		position: relative;
		min-height: 80vh;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		padding: 2rem;
		margin-top: -60px; // Compensate for navbar height

		.hero-content {
			position: relative;
			z-index: 2;
			text-align: center;
			max-width: 800px;
			margin: 0 auto;
			color: white;

			h1 {
				font-size: clamp(2.5rem, 5vw, 4rem);
				line-height: 1.2;
				margin-bottom: 1.5rem;
				font-weight: 700;
			}

			.subtitle {
				font-size: clamp(1.1rem, 2vw, 1.5rem);
				color: rgba(255, 255, 255, 0.8);
				margin-bottom: 2rem;
				line-height: 1.6;
			}
		}

		.hero-background {
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: 
				radial-gradient(circle at top right, 
					rgba(var(--accent-light), 0.15) 0%, 
					transparent 60%),
				radial-gradient(circle at bottom left, 
					rgba(var(--accent), 0.15) 0%, 
					transparent 60%);
			z-index: 1;
		}

		.gradient-overlay {
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: linear-gradient(
				180deg,
				rgba(19, 21, 26, 0.7) 0%,
				rgba(19, 21, 26, 0.9) 70%,
				#13151a 100%
			);
		}
	}

	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		margin-top: 2rem;

		@media (max-width: 576px) {
			flex-direction: column;
			align-items: center;
		}

		.cta-button {
			padding: 0.8rem 2rem;
			border-radius: 30px;
			font-size: 1.1rem;
			font-weight: 500;
			text-decoration: none;
			transition: all 0.3s ease;
			border: 2px solid transparent;

			&.primary {
				background: rgb(var(--accent));
				color: white;

				&:hover {
					background: rgba(var(--accent), 0.8);
					transform: translateY(-2px);
				}
			}

			&.secondary {
				background: transparent;
				border-color: rgba(var(--accent), 0.5);
				color: rgb(var(--accent-light));

				&:hover {
					border-color: rgb(var(--accent));
					background: rgba(var(--accent), 0.1);
					transform: translateY(-2px);
				}
			}
		}
	}

	.featured-posts {
		max-width: 1200px;
		margin: 0 auto;
		padding: 4rem 2rem;

		h2 {
			font-size: 2rem;
			text-align: center;
			margin-bottom: 3rem;
			color: white;
			position: relative;
			display: inline-block;
			left: 50%;
			transform: translateX(-50%);

			&::after {
				content: '';
				position: absolute;
				bottom: -10px;
				left: 0;
				right: 0;
				height: 2px;
				background: rgb(var(--accent));
				transform: scaleX(0.6);
				transition: transform 0.3s ease;
			}

			&:hover::after {
				transform: scaleX(1);
			}
		}

		.card-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
			gap: 2rem;
			padding: 0;
		}
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
