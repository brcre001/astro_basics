---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { formatDate } from "../utils/date";  // We'll create this utility

// Get all blog posts and sort by date
const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog | Brandon's Dev Blog">
	<main>
		<section class="blog-header">
			<h1 class="text-gradient">Latest Blog Posts</h1>
			<p>Thoughts, tutorials, and insights about web development</p>
		</section>

		<section class="blog-grid">
			{posts.map((post) => (
				<article class="blog-card">
					{post.data.image && (
						<div class="card-image">
							<img src={post.data.image} alt={post.data.title} />
						</div>
					)}
					<div class="card-content">
						<div class="card-meta">
							<span class="date">{formatDate(post.data.pubDate)}</span>
							{post.data.tags && (
								<div class="tags">
									{post.data.tags.map((tag) => (
										<span class="tag">{tag}</span>
									))}
								</div>
							)}
						</div>
						<h2>{post.data.title}</h2>
						<p>{post.data.description}</p>
						<a href={`/blog/${post.slug}`} class="read-more">
							Read More â†’
						</a>
					</div>
				</article>
			))}
		</section>
	</main>
</Layout>

<style lang="scss">
	main {
		margin: auto;
		padding: 2rem;
		max-width: 1200px;
		padding-top: 3rem;
	}

	.blog-header {
		text-align: center;
		margin-bottom: 4rem;

		h1 {
			font-size: 3rem;
			margin-bottom: 1rem;
		}

		p {
			color: #888;
			font-size: 1.2rem;
		}
	}

	.blog-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 2rem;
	}

	.blog-card {
		background: rgba(255, 255, 255, 0.05);
		border-radius: 15px;
		overflow: hidden;
		transition: transform 0.2s ease;
		border: 1px solid rgba(255, 255, 255, 0.1);

		&:hover {
			transform: translateY(-5px);
		}

		.card-image {
			width: 100%;
			height: 200px;
			overflow: hidden;

			img {
				width: 100%;
				height: 100%;
				object-fit: cover;
			}
		}

		.card-content {
			padding: 1.5rem;

			h2 {
				font-size: 1.5rem;
				margin: 0.5rem 0;
				color: white;
			}

			p {
				color: #888;
				margin-bottom: 1rem;
			}
		}

		.card-meta {
			display: flex;
			justify-content: space-between;
			align-items: center;
			margin-bottom: 1rem;

			.date {
				color: #666;
				font-size: 0.9rem;
			}

			.tags {
				display: flex;
				gap: 0.5rem;

				.tag {
					background: rgba(255, 255, 255, 0.1);
					padding: 0.2rem 0.6rem;
					border-radius: 15px;
					font-size: 0.8rem;
					color: #888;
				}
			}
		}

		.read-more {
			display: inline-block;
			color: var(--accent);
			text-decoration: none;
			font-weight: 500;
			margin-top: 1rem;

			&:hover {
				text-decoration: underline;
			}
		}
	}
</style>